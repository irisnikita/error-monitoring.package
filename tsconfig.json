{
  "compilerOptions": {
    "outDir": "./build",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "isolatedModules": false,
    "noEmit": false,
    "baseUrl": "src",
    "jsx": "react"
  },
  "include": ["src"]
}